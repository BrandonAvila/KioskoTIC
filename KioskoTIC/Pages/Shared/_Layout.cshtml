<!DOCTYPE html>
@using Microsoft.AspNetCore.Http;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">KioskoTIC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Divisiones/CatalogoDivision">Divisiones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/SobreNosotros">Sobre Nosotros</a>
                    </li>
                    <li class="nav-item">
                        @{

                            @if (Context.Session.GetString("Nivel") == "3")
                            {
                                <a class="nav-link" asp-page="/Proyectos/CreateAlumno">Agregar proyecto...</a>
                            }
                            else
                            {

                            }
                        }
                    </li>
                    <li class="nav-item">
                        @{

                            @if (Context.Session.GetString("Nivel") == "1")
                            {
                                <a class="nav-link" asp-page="/Divisiones/Index">Administrar</a>
                            }
                            else
                            {

                            }
                        }
                    </li>
                    <li class="nav-item">
                        @{
                            @if (string.IsNullOrEmpty(Context.Session.GetString("usuario")))
                            {

                            }
                            else
                            {
                                <a class="nav-link" asp-page="/Login" asp-page-handler="Cerrar">Cerrar sesión</a>
                            }

                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-disabled="true">
                            @{

                                @if (string.IsNullOrEmpty(Context.Session.GetString("usuario")))
                                {

                                    //Aqui le dices  o redireccionas al usuario (No tienes permiso!)
                                    @Html.Raw("No tienes permisos");


                                }
                                else
                                {
                                    @Html.Raw("Bienvenido " + Context.Session.GetString("usuario"));
                                }

                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <style>
            .footer {
                position: absolute;
                width: 100%;
            }
        </style>
        <div class="containerFooter">
            <div class="row">

                <div class="footer-col">
                    <br />
                    <h4>Compañia</h4>
                    <ul>
                        <li><a href="#">Acerca de KioskoTIC</a></li>
                        <li><a href="#">Política de Privacidad</a></li>
                        <li><a target="_blank" href="https://goo.gl/maps/QoQfNEwp61QzddDH7">Ubicanos</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <br />
                    <h4>Ayuda</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Contáctanos</a></li>
                        <li><a href="#">¿Bugs? Repórtalo</a></li>
                        <li><a href="#">Reportes</a></li>
                        <li><a href="#">Estatus de Reportes</a></li>
                    </ul>
                </div> 
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
