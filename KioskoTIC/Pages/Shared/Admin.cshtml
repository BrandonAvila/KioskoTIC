<!DOCTYPE html>
@using Microsoft.AspNetCore.Http;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Login" asp-page-handler="Cerrar">Cerrar sesión</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Divisiones/Index">Divisiones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Carreras/Index">Carreras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Proyectos/Index">Proyectos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Usuarios/Index">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Niveles/Index">Niveles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-disabled="true">
                            @{

                                @if (string.IsNullOrEmpty(Context.Session.GetString("usuario")))
                                {

                                    //Aqui le dices  o redireccionas al usuario (No tienes permiso!)
                                    @Html.Raw("No tienes permisos");


                                }
                                else
                                {
                                    @Html.Raw("Bienvenido " + Context.Session.GetString("usuario"));
                                }

                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

