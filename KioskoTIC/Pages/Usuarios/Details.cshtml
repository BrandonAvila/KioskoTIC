@page
@model KioskoTIC.Pages.Usuarios.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.User)
        </dd>
        <dt class="col-sm-2">
            Contraseña
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Contrasenia)
        </dd>
        <dt class="col-sm-2">
            Nombres y apellidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nivel del usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nivel.NivelId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Usuario.UsuarioId">Edit</a> |
