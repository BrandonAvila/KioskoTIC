@page
@model KioskoTIC.Pages.Usuarios.DetailsModel

@{
    ViewData["Title"] = "Detalles del usuario";
}

<center>
    <h1>Detalles del usuario</h1>
</center>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.User)
        </dd>
        <dt class="col-sm-2">
            Contraseña
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Contrasenia)
        </dd>
        <dt class="col-sm-2">
            Nombres y apellidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nivel del usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nivel.NombreNivel)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Usuario.UsuarioId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
