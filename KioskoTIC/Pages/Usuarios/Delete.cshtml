@page
@model KioskoTIC.Pages.Usuarios.DeleteModel

@{
    ViewData["Title"] = "Eliminar usuarios";
}

<center>
    <h1>Eliminar usuario</h1>
</center>

<hr />

<h3>¿Estás seguro que deseas borrar a este usuario?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.User)
        </dd>
        <dt class="col-sm-2">
            Contraseña
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Contrasenia)
        </dd>
        <dt class="col-sm-2">
            Nombres y apellidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nivel del usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nivel.NombreNivel)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Usuario.UsuarioId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
