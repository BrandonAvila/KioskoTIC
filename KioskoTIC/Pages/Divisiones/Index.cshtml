@page
@model KioskoTIC.Pages.Divisiones.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Nombre de la division
            </th>
            <th>
                Descripcion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Division) {
        <tr>
            <td>
                <img width="150" src="~/img/@Html.DisplayFor(modelItem => item.ProfilePicture)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDivision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDivision)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DivisionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DivisionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DivisionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
