@page
@model KioskoTIC.Pages.Divisiones.DeleteModel

@{
    ViewData["Title"] = "Eliminar divisiones";
}

<center>
    <h1>Eliminar división</h1>
</center>

<hr />

<h3>¿Estás seguro que deseas borrar esta división?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img width="150" src="~/img/@Html.DisplayFor(model => model.Division.ProfilePicture)" alt="Alternate Text" />
        </dd>
        <dt class="col-sm-2">
            Nombre de la division
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.NombreDivision)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Division.DescripcionDivision)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Division.DivisionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
