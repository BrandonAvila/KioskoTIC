@page
@model KioskoTIC.Pages.Carreras.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de la carrera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.NombreCarrera)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.DescripcionCarrera)
        </dd>
        <dt class="col-sm-2">
            Division a la que pertenece
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.Division.NombreDivision)
        </dd>
        <dt class="col-sm-2">
            Plan de estudios
        </dt>
        <dd class="col-sm-10">
            <img width="150" src="~/Archivos/@Html.DisplayFor(model => model.Carrera.archivopdf)" alt="Alternate Text" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Carrera.CarreraId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
