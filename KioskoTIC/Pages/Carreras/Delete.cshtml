@page
@model KioskoTIC.Pages.Carreras.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de la carrera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.NombreCarrera)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.DescripcionCarrera)
        </dd>
        <dt class="col-sm-2">
            Division a la que pertenece
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carrera.Division.NombreDivision)
        </dd>
        <dt class="col-sm-2">
            Plan de estudios
        </dt>
        <dd class="col-sm-10">
            <img width="150" src="~/Archivos/@Html.DisplayFor(model => model.Carrera.archivopdf)" alt="Alternate Text" />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Carrera.CarreraId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
